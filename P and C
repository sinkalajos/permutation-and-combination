def fact(num):
  if num==1:
    return num
  else:
    return num*fact(num-1)



num = int(input("enter a number for N!"))
permutation=1
combination=1

x = (num) - (R)
print (x)



def fact(R):
       if R==1:
        return R
       else:
        return R*fact(R-1)
R=int (input("enter the R!"))
print ("R!",fact(R))

def fact(x):
    factorial=1
    for i in range(1, x+1):
        factorial=factorial*i
    return factorial

print ("X!",fact(x))
print("num!",fact(num))

permutation = (fact(num))/(fact(x))
combination = (permutation) / (fact(R))


print ("permutation is", permutation)
print ("combination is", combination)
